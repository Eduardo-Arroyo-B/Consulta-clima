<script>
	let myDate = new Date();
	let hours = myDate.getHours();
	let minutes = myDate.getMinutes();
	document.getElementById("Hora").innerHTML = `${hours}:${minutes}`;
</script>

<script>
	const daysOfWeek = ["sábado", "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Domingo"];
	const date = new Date();
	const dayName = daysOfWeek[date.getDay()];
	document.getElementById("Fecha").innerHTML = `${dayName}, ${date.toLocaleDateString()}`;
</script>

<section class="detalles">
	
