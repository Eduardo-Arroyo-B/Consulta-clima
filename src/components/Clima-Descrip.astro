---
interface Props {
	dia: string;
	img?: string;
	grados: string;
}

const { dia, img, grados } = Astro.props;
---

<li class="Cartas">
    <h2>{dia}</h2>
    <img src={img}>
    <p>{grados}</p>
</li>


<style>
    .Cartas {
        display: flex;
        align-items: center;
        font-family: Arial, Helvetica, sans-serif;
    }
    h2 {
        font-size: 10px;
        text-align: center;
    }
    img {

    }
    p {
        font-size: 15px;
        text-align: center;
    }
</style>
